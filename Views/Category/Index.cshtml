@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
<h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-circle"></i>  Add New Category</a>
        </div>

    </div>


<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Category Name</th>
        

        <th>
           Number Of Books
        </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td style="50%">
                    @obj.Name
                </td>
                <td style="50%">
                    @obj.NumOfBooks
                </td>
            </tr>
        }
    </tbody>


</table>
</div>
